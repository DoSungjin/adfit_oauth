# AdFit OAuth Server 환경 변수 예시

# 서버 설정
PORT=8080
ENVIRONMENT=development

# Firebase
FIREBASE_PROJECT_ID=your-project-id

# TikTok OAuth
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_REDIRECT_URI=your_redirect_uri

# YouTube OAuth
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret

# YouTube Data API v3 (Browser Key)
YOUTUBE_API_KEY=your_youtube_api_key

# Security
JWT_SECRET=your_jwt_secret
STATS_UPDATE_TOKEN=your_stats_token

# Client
CLIENT_REDIRECT_URL=your_client_url

# Features
ENABLE_FIRESTORE_UPDATE=true
ENABLE_REALTIME_UPDATE=true
